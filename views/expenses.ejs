<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses Page</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <% selectedType = selectedType || 'X'; %> <!-- Set default value if undefined -->
    <% categories = categories || '[1, 2, 3]'; %>

    <!-- Nav Bar -->
    <%- include("partials/navbar") %>

<!-- Content Wrapper -->
<div class="content-wrapper">
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/home" class="nav-link">Home</a>
        <a href="/expenses" class="nav-link active">Expenses</a>
        <a href="/helpfultips" class="nav-link">Helpful Tips</a>
        <a href="/settings" class="nav-link">Settings</a>
        <a href="/profile" class="nav-link">Profile</a>
    </div>

<!-- Main Content -->
<div class="main-content">
    <div class="container">
        <!-- Expense/Income Entry Form -->
        <div class="setting-section">
            <h2 class="section-title">Add New Entry</h2>
            <table class="table expense-categories-table">
                <thead>
                    <tr>
                        <th>Entry Type</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Submit</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="expense-category-row">
                    <td>
                        <form method="POST" action="/expenses" id="typeForm">
                            <!-- Radio button for 'X' (Expenses) -->
                            <label>
                                <input 
                                    type="radio" 
                                    name="type" 
                                    value="X" 
                                    <%= selectedType === 'X' ? 'checked' : '' %> 
                                    onchange="document.getElementById('typeForm').submit()">
                                Expenses
                            </label>
                            <!-- Radio button for 'I' (Income) -->
                            <label>
                                <input 
                                    type="radio" 
                                    name="type" 
                                    value="I" 
                                    <%= selectedType === 'I' ? 'checked' : '' %> 
                                    onchange="document.getElementById('typeForm').submit()">
                                Income
                            </label>
                        </form>                                    
                    </td>

                        <form action="/entry-submit" method="POST"> 
                        <td>
                            <input required type="date" id="entryDate" name="entryDate" class="styled-input">
                        </td>
                        <td>
                            <select id="category" required name="category" class="styled-select">
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.categoryid %>" <%= selectedType === 'X' && category.type === 'expense' ? 'selected' : '' %>><%= category.categoryname %></option>
                                <% }); %>
                            </select>
                            
                        </td>
                        <td>
                            <input required type="text" id="amount" name="amount" placeholder="$0.00" />
                        </td>
                        <td>
                            <input type="text" required id="description" name="description" placeholder="Enter description (optional)"></input>
                        </td>
                        <td>
                            <button type="submit" class="submit-entry">Submit</button>
                        </td>
                        <input type="hidden" name="userId" id="userId" value="<%= userId %>">
                    </form>

                    </tr>
                </tbody>
            </table>
        </div>
    
        <h1>Expense/Income Entries</h1>

        <table class="table expense-categories-table" id="entriesTable">
          <thead>
            <tr>
              <th>Date Created</th>
              <th>Amount</th>
              <th>Category</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% entries.forEach(entry => { %>
              <tr>
                <td><%= entry.formattedDate %></td>
                <td><%= entry.amount %></td>
                <td><%= entry.categoryname %></td> <!-- You might want to join with category table to get the category name -->
                <td><%= entry.description %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>       
    
    </div>
</div>
</div>

    <script>

        // Makes the number be added in a currency format
        document.getElementById('amount').addEventListener('input', function (e) {
        let value = e.target.value;

        // Remove any characters that are not digits or a single decimal
        value = value.replace(/[^0-9.]/g, '');

        // Allow only one decimal point
        if (value.indexOf('.') !== -1) {
            const parts = value.split('.');
            value = parts[0] + '.' + parts[1].slice(0, 2); // Limit to 2 decimals
        }

        // Format as currency
        value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ',');  // Add commas for thousands
        if (value) {
            value = '$' + value; // Add dollar sign
        }

        e.target.value = value;  // Update the input value
    });


    </script>

    <!-- Footer -->
    <footer class="footer" style="background-color: var(--theme-color); color: white;">
        &copy; 2024 CashCow. All rights reserved.
    </footer>

</body>
</html>
