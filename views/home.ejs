    <script>
        async function fetchData() {
            try {
                // Fetch expenses data
                const expensesResponse = await fetch('/expenses-by-month');
                const expensesData = await expensesResponse.json();

                // Fetch income data
                const incomeResponse = await fetch('/income-by-month');
                const incomeData = await incomeResponse.json();

                // Extract the months, expenses, and income values
                const months = expensesData.map(item => item.month);
                const expenses = expensesData.map(item => parseFloat(item.avg_expense));
                const income = incomeData.map(item => parseFloat(item.total_income));

                // Create the chart
                const ctx = document.getElementById('income-expense-chart').getContext('2d');
                new Chart(ctx, {
                    type: 'line', // Line chart type
                    data: {
                        labels: months, // X-axis labels (months)
                        datasets: [
                            {
                                label: 'Expenses',
                                data: expenses,
                                borderColor: 'rgba(255, 99, 132, 1)', // Red for expenses
                                fill: true,
                                tension: 0.1
                            },
                            {
                                label: 'Income',
                                data: income,
                                borderColor: 'rgba(54, 162, 235, 1)', // Blue for income
                                fill: true,
                                tension: 0.1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top'
                            }
                        },
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Month'
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'Amount ($)'
                                },
                                beginAtZero: true
                            }
                        }
                    }
                });
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }

        // Fetch data and render the chart
        fetchData();
    </script>
