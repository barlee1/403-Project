        <!-- Main Content -->
        <div class="main-content">
            <h1>Welcome to CashCow!</h1>
            <p>Look through your current data to see how you savings are going!</p>
        </div>

        <canvas id="lineChart" width="400" height="200"></canvas>

        <script>
            async function fetchChartData() {
                const response = await fetch('/chart-data');
                return response.json();
            }
    
            fetchChartData().then(data => {
                const labels = data.incomeData.map(item => new Date(item.month).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                }));
    
                const incomeTotals = data.incomeData.map(item => item.total);
                const expenseTotals = data.expenseData.map(item => item.total);
    
                const ctx = document.getElementById('lineChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels,
                        datasets: [
                            {
                                label: 'Income',
                                data: incomeTotals,
                                borderColor: 'rgba(75, 192, 192, 1)',
                                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                tension: 0.4,
                            },
                            {
                                label: 'Expense',
                                data: expenseTotals,
                                borderColor: 'rgba(255, 99, 132, 1)',
                                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                                tension: 0.4,
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                type: 'time',
                                time: {
                                    unit: 'month',
                                },
                            },
                            y: {
                                beginAtZero: true,
                            },
                        },
                    },
                });
            });
        </script>

